<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginBottom="8dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/tourism_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/placeholder" />

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/tourism_image"
        android:layout_toRightOf="@id/tourism_image"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="RtlHardcoded">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tourism_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_bold"
                android:textSize="16sp"
                tools:text="Tourism Title" />

            <ImageView
                android:id="@+id/tourism_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_rating"
                android:layout_weight="0"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tourism_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:textSize="12sp"
                tools:ignore="RtlSymmetry"
                tools:text="rating" />

        </LinearLayout>
        <TextView
            android:id="@+id/tourism_description"
            tools:text="Description"
            android:maxLines="2"
            android:textSize="14sp"
            android:fontFamily="@font/poppins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:src="@drawable/horizontal_line"/>

    </LinearLayout>

</RelativeLayout>